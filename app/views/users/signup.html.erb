<% provide(:title, 'Signup') %>




<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
  <div class="panel panel-default  ">
      <div class="panel-heading"><h5>User Reg</h5></div>
      	          <div class="panel-body">
      <form class="form-horizontal" role="form" action="/schools/school_login" method="post" >
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" name="user[email]" class="form-control" id="inputEmail3" placeholder="Email">
